{
    "manifest_version": 2,
    "name": "Download Manager",
    "version": "1.0",

    "description": "Download Manager",
    "icons": {
        "48": "icons/beast-48.png"
    },

    "background": {
        "scripts": [
            "download_manager/download_manager.js"
    ],
        "persistent": true
    },

    "permissions": [
        "activeTab",
        "downloads",
        "storage"
    ],

    "browser_action": {
        "default_icon": "icons/beasts-48.png",
        "default_title": "Download Test",
        "default_popup": "download_manager/download_manager.html"
    }
}